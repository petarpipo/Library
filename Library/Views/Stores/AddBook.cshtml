@model Library.Models.AddBookToStore
@{
    ViewBag.Title = "AddBook";
}

<h2>AddBook</h2>

@using (Html.BeginForm("AddBook", "Stores"))
{
    <div class="form-group">
        @Html.DropDownListFor(m => m.BookId, new SelectList(Model.Books, "id", "Name"), new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.StoreId)
    <button type="submit" class="btn btn-default">Save</button>
}